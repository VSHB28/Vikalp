@model IEnumerable<Vikalp.Models.DTO.HealthSystemParticipantDto>

@{
    ViewData["Title"] = "Health System Participants";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    #health-system {
        padding: 10px;
    }
</style>
<style>
    .um-action {
        white-space: nowrap;
    }
    /* Small, focused styles for the user management page */
    .um-card {
        border-radius: 0.5rem;
        box-shadow: 0 6px 18px rgba(12, 38, 63, 0.08);
    }

    .um-toolbar {
        gap: .5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

    .um-search {
        max-width: 320px;
    }

    .um-table thead th {
        /* background: linear-gradient(90deg,#0d6efd, #6610f2);
            color: #fff;
            border: 0; */
        color: #fff;
        border: 1px dotted;
        background: var(--ipas-sidebar);
    }

    .um-table tbody tr:hover {
        background: rgba(13,110,253,0.03);
    }

    .um-action .btn {
        min-width: 44px;
    }

    .um-badge-role {
        font-size: .8rem;
        padding: .25rem .45rem;
        border-radius: .25rem;
    }

    .um-empty {
        padding: 2rem;
        text-align: center;
        color: #6c757d;
    }

    .um-action a,
    .um-action button {
        position: relative;
        z-index: 10;
        pointer-events: auto;
    }

    .um-action svg {
        pointer-events: none;
    }

    .table-responsive {
        position: relative;
        z-index: 1;
    }

    .btn-add {
        background-color: #3F0C11;
        color: white;
    }
</style>

<div class="container-fluid" id="health-system">
    <div class="card um-card shadow-sm">
        <div class="card-body">
            <div class="umcard-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Health System Participants</h3>
                    <a href="@Url.Action("Create", "HealthSystemParticipant")" asp-action="Create" class="btn btn-add">
                        <i class="fa fa-plus"></i> Add Participant
                    </a>
                </div>
            </div>
            <hr />
            <div class="filter-section">
                <div class="filter-grid">
                    <div class="filter-item">
                        <label>State</label>
                        <select name="StateId" class="form-control" id="StateId">
                            <option value="">-- Select State --</option>
                            @foreach (var s in ViewBag.States)
                            {
                                <option value="@s.Id" @(ViewBag.StateId == s.Id ? "selected" : "")>@s.Name</option>
                            }
                        </select>
                    </div>
                    <div class="filter-item">
                        <label>District</label>
                        <select name="DistrictId" class="form-control" id="DistrictId">
                            <option value="">-- Select District --</option>
                        </select>
                    </div>
                    <div class="filter-item">
                       <label>Block</label>
                        <select name="BlockId" class="form-control" id="BlockId">
                            <option value="">-- Select Block --</option>
                        </select>
                    </div>
                    <div class="filter-item">
                         <label>Facility</label>
                        <select name="FacilityId" class="form-control" id="FacilityId">
                            <option value="">-- Select Facility --</option>
                        </select>
                    </div>
                    <div class="filter-item filter-btn-item">
                        <button type="button" class="btn btn-add" id="searchBtn" onclick="searchData()">Search</button>
                    </div>

                </div>
            </div>
           
            @if (!Model?.Any() ?? true)
            {
                <div class="alert alert-info">No participants found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped um-table align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-hash me-2"></i>S.No</th>
                                <th><i class="bi bi-person-fill me-2"></i>Full Name</th>
                                <th><i class="bi bi-building me-2"></i>Facility Name</th>
                                <th><i class="bi bi-geo-alt-fill me-2"></i>District</th>
                                <th><i class="bi bi-telephone-fill me-2"></i>Mobile</th>
                                <th><i class="bi bi-clipboard-check me-2"></i>Pre-Test</th>
                                <th><i class="bi bi-clipboard2-data-fill me-2"></i>Post-Test</th>
                                <th><i class="bi bi-gear-fill me-2"></i>Actions</th>

                            </tr>
                        </thead>
                        <tbody id="dataTable">
                            @{
                                int i = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.FullName</td>
                                    <td>@item.FacilityName</td>
                                    <td>@item.DistrictId</td> <!-- Replace with lookup name -->
                                    <td>@item.Mobile</td>
                                    <td>@item.VCATScorePreTest</td>
                                    <td>@item.VCATScorePostTest</td>
                                    <td class="text-end um-action">
                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-controller="HealthSystemParticipant"
                                           onclick=""
                                           asp-route-id=""
                                           title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <form asp-controller="HealthSystemParticipant"
                                              asp-action="Delete"
                                              asp-route-id=""
                                              method="post"
                                              class="d-inline"
                                              onclick="">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            <nav>
                <ul class="pagination justify-content-end">

        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   href="@Url.Action("Index", new {
                       page = ViewBag.CurrentPage - 1,
                       pageSize = ViewBag.PageSize,
                       StateId = ViewBag.StateId,
                       DistrictId = ViewBag.DistrictId,
                       BlockId = ViewBag.BlockId,
                       FacilityId = ViewBag.FacilityId
                   })">
                    Previous
                </a>
            </li>
        }

        @for (int p = 1; p <= ViewBag.TotalPages; p++)
        {
            <li class="page-item @(p == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new {
                       page = p,
                       pageSize = ViewBag.PageSize,
                       StateId = ViewBag.StateId,
                       DistrictId = ViewBag.DistrictId,
                       BlockId = ViewBag.BlockId,
                       FacilityId = ViewBag.FacilityId
                   })">
                    @p
                </a>
            </li>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   href="@Url.Action("Index", new {
                       page = ViewBag.CurrentPage + 1,
                       pageSize = ViewBag.PageSize,
                       StateId = ViewBag.StateId,
                       DistrictId = ViewBag.DistrictId,
                       BlockId = ViewBag.BlockId,
                       FacilityId = ViewBag.FacilityId
                   })">
                    Next
                </a>
            </li>
        }

    </ul>
            </nav>
        </div>
    </div>
</div>
@section Scripts {
    <script>
    // ---------------- CASCADING DROPDOWNS ----------------

        document.getElementById("StateId").addEventListener("change", function () {
            let stateId = this.value;
            resetDropdown("DistrictId", "-- Select District --");
            resetDropdown("BlockId", "-- Select Block --");
            resetDropdown("FacilityId", "-- Select Facility --");

            if (!stateId) return;

            fetch(`/HealthSystemParticipant/GetDistricts?stateId=${stateId}`)
                .then(res => res.json())
                .then(data => {
                    fillDropdown("DistrictId", data, "id", "name");
                });
        });

        document.getElementById("DistrictId").addEventListener("change", function () {
            let districtId = this.value;
            resetDropdown("BlockId", "-- Select Block --");
            resetDropdown("FacilityId", "-- Select Facility --");

            if (!districtId) return;

            fetch(`/HealthSystemParticipant/GetBlocks?districtId=${districtId}`)
                .then(res => res.json())
                .then(data => {
                    fillDropdown("BlockId", data, "id", "name");
                });
        });

        document.getElementById("BlockId").addEventListener("change", function () {
            let blockId = this.value;
            resetDropdown("FacilityId", "-- Select Facility --");

            if (!blockId) return;

            fetch(`/HealthSystemParticipant/GetFacilities?blockId=${blockId}`)
                .then(res => res.json())
                .then(data => {
                    fillDropdown("FacilityId", data, "id", "name");
                });
        });

         function resetDropdown(id, placeholder) {
            let ddl = document.getElementById(id);
            ddl.innerHTML = `<option value="">${placeholder}</option>`;
        }

        function fillDropdown(id, data, valueField, textField) {
            let ddl = document.getElementById(id);
            data.forEach(x => {
                let opt = document.createElement("option");
                opt.value = x[valueField];
                opt.text = x[textField];
                ddl.appendChild(opt);
            });
        }

        function searchData() {

        var stateId = document.getElementsByName("StateId")[0].value;
        var districtId = document.getElementsByName("DistrictId")[0].value;
        var blockId = document.getElementsByName("BlockId")[0].value;
        var facilityId = document.getElementsByName("FacilityId")[0].value;

        var url = '/HealthSystemParticipant/Index?page=1&pageSize=10'
            + '&StateId=' + stateId
            + '&DistrictId=' + districtId
            + '&BlockId=' + blockId
            + '&FacilityId=' + facilityId;

        window.location.href = url;
    }

    //===========Reload dropdown================

    document.addEventListener("DOMContentLoaded", async function () {

    var stateId = "@ViewBag.StateId";
    var districtId = "@ViewBag.DistrictId";
    var blockId = "@ViewBag.BlockId";
    var facilityId = "@ViewBag.FacilityId";

    if (stateId) {

        document.getElementById("StateId").value = stateId;

        // Load Districts
        let districts = await fetch(`/HealthSystemParticipant/GetDistricts?stateId=${stateId}`)
            .then(res => res.json());

        fillDropdown("DistrictId", districts, "id", "name");

        if (districtId) {

            document.getElementById("DistrictId").value = districtId;

            // Load Blocks
            let blocks = await fetch(`/HealthSystemParticipant/GetBlocks?districtId=${districtId}`)
                .then(res => res.json());

            fillDropdown("BlockId", blocks, "id", "name");

            if (blockId) {

                document.getElementById("BlockId").value = blockId;

                // Load Facilities
                let facilities = await fetch(`/HealthSystemParticipant/GetFacilities?blockId=${blockId}`)
                    .then(res => res.json());

                fillDropdown("FacilityId", facilities, "id", "name");

                if (facilityId) {
                    document.getElementById("FacilityId").value = facilityId;
                }
            }
        }
    }

});

      </script>
}