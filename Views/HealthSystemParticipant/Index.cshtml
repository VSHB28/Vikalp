@model IEnumerable<Vikalp.Models.DTO.HealthSystemParticipantDto>

@{
    ViewData["Title"] = "Health System Participants";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
                <h3 class="mb-0">Health System Participants</h3>
                <a href="@Url.Action("Create", "HealthSystemParticipant")" asp-action="Create" class="btn btn-light">
                    <i class="fa fa-plus"></i> Add Participant
                </a>
            </div>

            @if (!Model?.Any() ?? true)
            {
                <div class="alert alert-info">No participants found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Full Name</th>
                                <th>Facility Name</th>
                                <th>District</th>
                                <th>Mobile</th>
                                <th>Pre-Test</th>
                                <th>Post-Test</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.FacilityName</td>
                                    <td>@item.DistrictId</td> <!-- Replace with lookup name -->
                                    <td>@item.Mobile</td>
                                    <td>@item.VCATScorePreTest</td>
                                    <td>@item.VCATScorePostTest</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ParticipantId" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@item.ParticipantId" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this participant?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>