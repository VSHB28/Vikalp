@model IEnumerable<Vikalp.Models.DTO.AshaOrientationDto>

@{
    ViewData["Title"] = "ASHA Orientation Records";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- ===== HEADER BAR ===== -->
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background: linear-gradient(90deg, #f04d23, #f36b3c); color: white;">
            <h5 class="mb-0">ASHA Orientation Records</h5>
            <a href="@Url.Action("Create", "AshaOrientation")" asp-action="Create" class="btn btn-light">
                <i class="fa fa-plus"></i> Add New Entry
            </a>
        </div>

            <!-- ===== TABLE ===== -->
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                        <th>S.No</th>
                        <th>Date Of Orientation</th>
                        <th>Facility</th>
                        <th>Intervention Participants</th>
                        <th>NonIntervention Participants</th>
                        <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="dataTable">
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                            <td>@item.DateofOrientation.ToString("dd-MM-yyyy")</td>
                                <td>@item.FacilityName</td>
                                <td>@item.InterventionCount</td>
                                <td>@item.NonInterventionCount</td>
                                <td class="text-end um-action">
                                    <a class="btn btn-sm btn-outline-primary me-1"
                                       asp-controller="AshaOrientation"
                                       onclick="goToEdit('@item.VenueGuid')"
                                       asp-route-id="'@item.VenueGuid'"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form asp-controller="AshaOrientation"
                                          asp-action="Delete"
                                          asp-route-id="'@item.VenueGuid'"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Delete Record \" ' + ' @item.Venue' + '\"?' );">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function resetFilters() {
            document.getElementById("searchBox").value = "";
            document.getElementById("stateFilter").value = "";
            document.getElementById("statusFilter").value = "";
        }

            function goToEdit(venueGuid) {
            window.location.href =
                '/AshaOrientation/Edit?venueGuid=' + venueGuid;
        }
    </script>
}
