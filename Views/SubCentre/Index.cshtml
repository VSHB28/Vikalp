           function deleteFacility(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'This SubCenter will be deleted',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/SubCentre/DeleteConfirmed',
                    type: 'POST',
                    data: {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function () {
                        Swal.fire('Deleted!', 'SubCentre deleted.', 'success');
                        $('#blockDropdown').change();
                    },
                    error: function () {
                        Swal.fire('Error!', 'Could not delete SubCentre.', 'error');
                    }
                });
            }
        });
    }


</script>