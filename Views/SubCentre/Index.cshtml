<script>
    $(document).ready(function () {

        $('#stateDropdown').change(function () {

            let stateId = $(this).val();

            resetBelow('state');

            if (!stateId) return;

            $.getJSON('/SubCentre/GetDistricts', { stateId }, function (data) {
                $.each(data, function (i, d) {
                    $('#districtDropdown').append(`<option value="${d.id}">${d.name}</option>`);
                });
            });
        });

        $('#districtDropdown').change(function () {

            let districtId = $(this).val();

            resetBelow('district');

            if (!districtId) return;

            $.getJSON('/SubCentre/GetBlocks', { districtId }, function (data) {
                $.each(data, function (i, b) {
                    $('#blockDropdown').append(`<option value="${b.id}">${b.name}</option>`);
                });
            });
        });

        $('#blockDropdown').change(function () {

        let blockId = $(this).val();

        resetBelow('block');

        if (!blockId) return;

        $('#facilityDropdown').html(`
            <option value="select">Select Facility</option>
            <option value="na">NA</option>
        `);

        $.getJSON('/SubCentre/GetFacilities', { blockId }, function (data) {
            $.each(data, function (i, f) {
                $('#facilityDropdown').append(
                    `<option value="${f.id}">${f.name}</option>`
                );
            });
        });

        loadSubCentres(blockId, null);
    });
  
        $('#facilityDropdown').change(function () {
        let blockId = $('#blockDropdown').val();
        let facilityId = $(this).val();

        if (!blockId) return;

        if (facilityId === "select" || facilityId === "") {
            facilityId = null;  
        } else if (facilityId === "na") {
            facilityId = -1; 
        } else {
            facilityId = parseInt(facilityId);  
        }

        loadSubCentres(blockId, facilityId);
    });

    });

    function loadSubCentres(blockId, facilityId) {

        $.getJSON('/SubCentre/GetByBlock',
            { blockId: blockId, facilityId: facilityId },
            function (data) {

                let html = '';

                if (!data || data.length === 0) {
                    html = `<tr>
                                <td colspan="7" class="text-center text-muted">
                                    No records found
                                </td>
                            </tr>`;
                }
                else {
                    $.each(data, function (i, s) {
                        html += `<tr>
                                    <td>${i + 1}</td>
                                    <td>${s.facilityName ?? ''}</td>
                                    <td>${s.subCentre ?? ''}</td>
                                    <td>${s.ninNumber ?? ''}</td>

                                    <td>
                                        <button class="btn btn-sm btn-outline-info"
                                                onclick="showInfo(${s.subCentreId})">
                                            <i class="bi bi-plus-circle"></i>
                                        </button>
                                    </td>

                                    <td>
                                        <button class="btn btn-sm btn-outline-success"
                                                onclick="showProfile(${s.subCentreId})">
                                            <i class="bi bi-person-plus"></i>
                                        </button>
                                    </td>

                                    <td>
                                        <a href="/SubCentre/Edit/${s.subCentreId}"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                          <button type="button"
                                         class="btn btn-sm btn-outline-danger"
                                       onclick="deleteFacility(${s.subCentreId})"
                                          title="Delete">
                                   <i class="bi bi-trash"></i>
                                      </button>

                                    </td>
                                </tr>`;
                    });
                }

                $('#subCentreList').html(html);
            });
    }

    function resetBelow(level) {

        if (level === 'state') {
            $('#districtDropdown').html('<option value="">Select District</option>');
        }

        if (level === 'state' || level === 'district') {
            $('#blockDropdown').html('<option value="">Select Block</option>');
        }

        if (level === 'state' || level === 'district' || level === 'block') {
            $('#facilityDropdown').html('<option value="">Select Facility</option>');
            $('#subCentreList').html(`<tr>
                                        <td colspan="7" class="text-center text-muted">
                                            Select block to see records
                                        </td>
                                      </tr>`);
        }
    }


      let selectedFacilityId = 0;
      let selectedProfileId = 0;
      let selectedHrId = 0;

      function showInfo(item){
          $("#hdnSubCenterId").val(item);
          $("#facilityprofileModal").modal("show");
      }

