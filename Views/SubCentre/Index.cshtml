                TrainedInFPLMIS: $("#TrainedInFPLMIS").val()
            };

            $.ajax({
                url: '/SubCentre/SaveHrStatus',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(modelhr),
