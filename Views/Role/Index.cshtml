@model IEnumerable<Vikalp.Models.DTO.RoleDto>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Roles</h3>
    <a class="btn btn-primary" asp-page="./Create">Create Role</a>
</div>

<table class="table table-striped">
    <thead>
        <tr><th>#</th><th>Name</th><th>Active</th><th>Deleted</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.RoleId</td>
            <td>@r.RoleName</td>
            <td>@r.RoleType</td>
            <td>@r.Description</td>
            <td>@(r.IsActive ? "Yes" : "No")</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-page="./Edit" asp-route-id="@r.RoleId">Edit</a>
                <a class="btn btn-sm btn-outline-secondary" asp-page="./Details" asp-route-id="@r.RoleId">Details</a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@r.RoleId" class="d-inline" onsubmit="return confirm('Delete role?');">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
