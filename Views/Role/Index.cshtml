@model IEnumerable<Vikalp.Models.DTO.RoleDto>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Roles</h3>
                <a href="@Url.Action("Create", "Role")" 
                   class="btn btn-primary" 
                   style="z-index: 1000; position: relative;"
                   onclick="console.log('Create Role button clicked! URL: @Url.Action("Create", "Role")'); return true;">
                    Create Role
                </a>
            </div>

            @* <div class="alert alert-info">
                <strong>Debug Info:</strong> Create URL = @Url.Action("Create", "Role")
            </div> *@

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model?.Any() ?? true)
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            No roles found. <a href="@Url.Action("Create", "Role")">Create your first role</a>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.RoleId</td>
                            <td>@r.RoleName</td>
                            <td>@r.RoleType</td>
                            <td>@r.Description</td>
                            <td>
                                @if (r.IsActive)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", "Role", new { id = r.RoleId })">Edit</a>
                                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", "Role", new { id = r.RoleId })">Details</a>
                                <form method="post" asp-action="Delete" asp-controller="Role" asp-route-id="@r.RoleId" class="d-inline" onsubmit="return confirm('Are you sure you want to delete role @r.RoleName?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
