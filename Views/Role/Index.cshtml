@model IEnumerable<Vikalp.Models.DTO.RoleDto>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .um-action {
        white-space: nowrap;
    }
    /* Small, focused styles for the user management page */
    .um-card {
        border-radius: 0.5rem;
        box-shadow: 0 6px 18px rgba(12, 38, 63, 0.08);
    }

    .um-toolbar {
        gap: .5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

    .um-search {
        max-width: 320px;
    }

    .um-table thead th {
        /* background: linear-gradient(90deg,#0d6efd, #6610f2);
        color: #fff;
        border: 0; */
        color: #fff;
        border: 1px dotted;
        background: var(--ipas-primary);
    }

    .um-table tbody tr:hover {
        background: rgba(13,110,253,0.03);
    }

    .um-action .btn {
        min-width: 44px;
    }

    .um-badge-role {
        font-size: .8rem;
        padding: .25rem .45rem;
        border-radius: .25rem;
    }

    .um-empty {
        padding: 2rem;
        text-align: center;
        color: #6c757d;
    }

    .um-action a,
    .um-action button {
        position: relative;
        z-index: 10;
        pointer-events: auto;
    }

    .um-action svg {
        pointer-events: none;
    }

    .table-responsive {
        position: relative;
        z-index: 1;
    }

    .btn-add {
        background-color: #3F0C11;
        color: white;
    }
</style>

<div class="container py-4">
    <div class="card um-card">
        <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
                <h3 class="mb-0">Roles</h3>
                <a href="@Url.Action("Create", "Role")" class="btn btn-add btn-sm btn-primary ms-3" style="z-index: 1000; position: relative;">
                    Add Role
                </a>
            </div>

            @if (!Model?.Any() ?? true)
            {
                <div class="text-muted">No roles found.</div>
            }
            else
            {
                <table class="table table-hover um-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Role Name</th>
                            <th>Type</th>
                            <th class="text-center">Active</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var role in Model.Select((r, idx) => (r, idx)))
                    {
                        <tr>
                            <td>@(role.idx + 1)</td>
                            <td>@role.r.RoleName</td>
                            <td>@role.r.RoleType</td>
                            <td class="text-center">@((role.r.IsActive==1) ? "Yes" : "No")</td>
                            <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary me-1"
                                       asp-controller="Role"
                                       onclick="goToEdit(@role.r.RoleId)"
                                       asp-route-id="@role.r.RoleId"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <input type="hidden" asp-for="UserId" />
                                    <a class="btn btn-sm btn-outline-success me-1"
                                       asp-controller="Role"
                                       onclick="goToDetails(@role.r.RoleId)"
                                       asp-route-id="@role.r.RoleId"
                                       title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                <form asp-action="Delete" asp-controller="Role" asp-route-id="@role.r.RoleId" method="post" class="d-inline" onsubmit="return confirm('Delete role \"' + '@role.r.RoleName' + '\"?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
<script>
    function goToEdit(id) {
        window.location.href = '/Role/Edit/' + id;
    }
    function goToDetails(id) {
        window.location.href = '/Role/Details/' + id;
    }
</script>
