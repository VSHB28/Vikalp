@model IEnumerable<Vikalp.Models.DTO.RoleDto>
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Edit Role</h3>

<form method="post">
    <input type="hidden" asp-for="Input.RoleId" />
    <div class="mb-3">
        <label class="form-label">Role Name</label>
        <input asp-for="Input.RoleName" class="form-control" />
    </div>
    <div class="form-check form-switch mb-3">
        <input asp-for="Input.IsActive" class="form-check-input" />
        <label class="form-check-label">Is Active</label>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Input.Deleted" class="form-check-input" />
        <label class="form-check-label">Deleted</label>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-page="./Index">Cancel</a>
</form>
