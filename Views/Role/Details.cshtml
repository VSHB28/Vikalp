@model Vikalp.Models.DTO.RoleDto
@{
    ViewData["Title"] = "Role Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h3>Role Details</h3>
            <hr />
            
            <dl class="row">
                <dt class="col-sm-3">Role ID</dt>
                <dd class="col-sm-9">@Model.RoleId</dd>

                <dt class="col-sm-3">Role Name</dt>
                <dd class="col-sm-9">@Model.RoleName</dd>

                <dt class="col-sm-3">Role Type</dt>
                <dd class="col-sm-9">@Model.RoleType</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Is Active</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive==1)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </dd>
            </dl>

            <div class="mt-3">
                <a class="btn btn-primary" asp-action="Edit" asp-controller="Role" asp-route-id="@Model.RoleId">Edit</a>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Role">Back to List</a>
            </div>
        </div>
    </div>
</div>
