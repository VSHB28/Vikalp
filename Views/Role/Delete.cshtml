@model Vikalp.Models.DTO.RoleDto
@{
    ViewData["Title"] = "Delete Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h3 class="text-danger">Delete Role</h3>
            <hr />
            
            <div class="alert alert-warning">
                <strong>Warning!</strong> Are you sure you want to delete this role?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Role ID</dt>
                <dd class="col-sm-9">@Model.RoleId</dd>

                <dt class="col-sm-3">Role Name</dt>
                <dd class="col-sm-9">@Model.RoleName</dd>

                <dt class="col-sm-3">Role Type</dt>
                <dd class="col-sm-9">@Model.RoleType</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Is Active</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive==1)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="RoleId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Role">Cancel</a>
            </form>
        </div>
    </div>
</div>
