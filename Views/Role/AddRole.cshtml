@model Vikalp.Models.DTO.RoleDto
@{
    ViewData["Title"] = "Add Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h3>Create Role</h3>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label">Role Name</label>
                            <input asp-for="RoleName" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="RoleType" class="form-label">Role Type</label>
                            <input asp-for="RoleType" class="form-control" />
                            <span asp-validation-for="RoleType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="1"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">

                        <label asp-for="IsActive" class="form-check-label form-label">Is Active</label>
                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                        </div>
                    </div>
                </div>
                

                

               


                <button class="btn btn-create btn-primary" type="submit">Create</button>
                <a class="btn btn-secondary" asp-action="Index" asp-controller="Role">Cancel</a>
            </form>
        </div>
    </div>
</div>