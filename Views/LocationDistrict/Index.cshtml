@model IEnumerable<Vikalp.DTO.LocationDistrictDTO>
@{
    ViewData["Title"] = "Districts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var states = ViewBag.StateList as List<Vikalp.Models.DTO.DropdownDto> ?? new();
    int? selectedState = ViewBag.SelectedStateId as int?;
}

<style>

    .um-card {
        border-radius: 0.5rem;
        box-shadow: 0 6px 18px rgba(12, 38, 63, 0.08);
    }

    .um-toolbar {
        gap: .5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        /* margin-bottom: 1rem; */
    }

    .um-search {
        max-width: 320px;
    }

    .um-table thead th {
        /* background: linear-gradient(90deg,#0d6efd, #6610f2);
        color: #fff;
        border: 0; */
        color: #fff;
        border: 1px dotted;
        background: var(--ipas-sidebar);
    }

    .um-table tbody tr:hover {
        background: rgba(13,110,253,0.03);
    }

    .um-action .btn {
        min-width: 44px;
        margin-left: 0.2rem;
    }

    .um-badge {
        font-size: .8rem;
        padding: .25rem .45rem;
        border-radius: .25rem;
    }

    .um-empty {
        padding: 2rem;
        text-align: center;
        color: #6c757d;
    }

    .table-responsive {
        position: relative;
        z-index: 1;
    }
    .btn-add {
        background-color: #3F0C11;
        color: white;
    }
</style>

<div class="container py-2">
    <div class="card um-card">
        <div class="card-body">
            <div class="umcard-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">Districts</h3>
                        @* <div class="text-muted small">Manage districts by state</div> *@
                    </div>
                    <div class="um-toolbar">


                        <a href="@Url.Action("Create", "LocationDistrict")" class="btn btn-add  btn-primary ms-3">
                            Add District
                        </a>

                        @* <a class="btn btn-sm btn-outline-secondary ms-2" title="Refresh" onclick="location.reload()">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a> *@
                    </div>

                </div>
           </div>
           <hr />
            <div class="dropdown-section mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <select id="stateDropdown" class="form-select form-select-sm">
                            <option value="">Select State</option>
                            @foreach (var state in states)
                            {
                                <option value="@state.Id" @(state.Id == selectedState ? "selected" : "")>
                                    @state.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover um-table align-middle" id="districtTable">
                    <thead>
                        <tr>
                            <th style="width:1%;">#</th>
                            <th>District Name</th>
                            <th>District Code</th>
                            <th>State Id</th>
                            <th class="text-center">Active</th>
                            <th class="text-center">Centinal</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td colspan="7" class="text-center">Select a state to load districts</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function loadDistricts(stateId) {
            let tbody = $('#districtTable tbody');
            tbody.html('<tr><td colspan="7" class="text-center">Loading...</td></tr>');

            if (!stateId) {
                tbody.html('<tr><td colspan="7" class="text-center">Select a state to see districts</td></tr>');
                return;
            }

            $.getJSON('/LocationDistrict/GetDistrictsByState', { stateId: stateId }, function(data) {
                if (!data || data.length === 0) {
                    tbody.html('<tr><td colspan="7" class="text-center">No districts found</td></tr>');
                    return;
                }

                let html = '';
                $.each(data, function(i, d) {
                    html += `<tr>
                        <td>${i + 1}</td>
                        <td class="fw-semibold">${d.districtName}</td>
                        <td>${d.districtCode}</td>
                        <td>${d.stateId}</td>
                        <td class="text-center">
                            <span class="badge ${d.isActive ? 'bg-success' : 'bg-secondary'}">
                                ${d.isActive ? 'Yes' : 'No'}
                            </span>
                        </td>
                        <td class="text-center">
                            <span class="badge ${d.isCentinalDistrict ? 'bg-info' : 'bg-secondary'}">
                                ${d.isCentinalDistrict ? 'Yes' : 'No'}
                            </span>
                        </td>
                        <td class="text-end um-action">
                            <a href="/LocationDistrict/Edit/${d.districtId}" class="btn btn-sm btn-outline-primary" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteDistrict(${d.districtId})" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>`;
                });
                tbody.html(html);
            });
        }

        $(document).ready(function() {
            let selectedState = $('#stateDropdown').val();
            loadDistricts(selectedState);

            $('#stateDropdown').change(function() {
                loadDistricts($(this).val());
            });
        });

        function deleteDistrict(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This district will be deactivated',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/LocationDistrict/DeleteConfirmed', {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    }, function(res) {
                        if (res.success) {
                            Swal.fire('Deleted!', 'District deleted successfully.', 'success')
                                .then(() => location.reload());
                        } else {
                            Swal.fire('Error!', res.message || 'Could not delete district.', 'error');
                        }
                    });
                }
            });
        }
    </script>

