    }

    .table-responsive {
        position: relative;
        z-index: 1;
    }

    .btn-add {
        background-color: #3F0C11;
        color: white;
    }

    .umcard-header {
        background: linear-gradient(135deg, #F15A29, #b10315b5);
        color: #ffffff;
        padding: 10px 20px;
