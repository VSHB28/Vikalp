@using Vikalp.Models.DTO
@model IEnumerable<Vikalp.Models.DTO.HealthSystemActivityDto>
@{
    ViewData["Title"] = "Health Systems Activity Form";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .um-action {
        white-space: nowrap;
    }

    .um-card {
        border-radius: 0.5rem;
        box-shadow: 0 6px 18px rgba(12, 38, 63, 0.08);
    }

    .um-toolbar {
        gap: .5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

    .um-search {
        max-width: 320px;
    }

    .um-table thead th {
        /* background: linear-gradient(90deg,#0d6efd, #6610f2);
        color: #fff;
        border: 0; */
        color: #fff;
        border: 1px dotted;
        background: var(--ipas-sidebar);
    }

    .um-table tbody tr:hover {
        background: rgba(13,110,253,0.03);
    }

    .um-action .btn {
        min-width: 44px;
    }

    .um-empty {
        padding: 2rem;
        text-align: center;
        color: #6c757d;
    }

    .btn-add {
        background-color: #3F0C11;
        color: white;
    }
    .um-toolbar .form-control {
        background-color: var #FFFFFF (--ipas-white);
        border: 2px solid #E8E4E0;
        border-radius: 8px;
        color: var(--ipas-text-dark);
        padding: 8px !important ;
        font-size: 11px;
        height: auto;
    }
</style>

<div class="container py-2">
    <div class="card um-card">
        <div class="card-body">
            <div class="umcard-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-0">Health System Activity</h3>
                    </div>

                    <div class="um-toolbar">
                        <div class="d-flex um-search d-none">
                            <input id="searchTerm" class="form-control form-control-sm" placeholder="Search by activity name" />
                            <button type="button" class="btn btn-sm btn-secondary ms-2" onclick="searchActivity()">Search</button>
                        </div>

                        <a href="@Url.Action("Create", "HealthSystemActivity")" class="btn btn-add ms-3">
                            Add Activity
                        </a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="filter-section">
                <div class="filter-grid">
                    <div class="filter-item">
                        <label class="form-label">State </label>
                        <select name="StateId" class="form-control" id="StateId">
                            <option value="">-- Select State --</option>
                            @foreach (var s in ViewBag.States)
                            {
                                <option value="@s.Id" @(ViewBag.StateId == s.Id ? "selected" : "")>@s.Name</option>
                            }
                        </select>
                    </div>
                    <div class="filter-item">
                        <label class="form-label">District</label>
                        <select name="DistrictId" class="form-control" id="DistrictId">
                            <option value="">-- Select District --</option>
                        </select>
                    </div>
                    <div class="filter-item">
                        <label class="form-label">Activity Name</label>
                        <select name="ActivityNameId" class="form-control" id="ActivityNameId">
                            <option value="">-- Select ActivityName --</option>
                            @foreach (var s in ViewBag.ActivityTypeName)
                            {
                                <option value="@s.Value" @(ViewBag.ActivityTypeName.ToString() == s.Value ? "selected" : "")>@s.Text</option>
                            }
                        </select>
                    </div>
                    <div class="filter-item filter-btn-item">
                        <button type="button" class="btn btn-add" id="searchBtn" onclick="searchData()">Search</button>
                    </div>
                </div>
            </div>

            

                @if (!Model?.Any() ?? true)
            {
                <div class="um-empty">
                    <p class="mb-1">No data found.</p>
                    <a a href="@Url.Action("Create", "HealthSystemActivity")" class="btn btn-outline-primary">Add your first activity</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table id="activitiesTable" class="table table-striped  um-table align-middle">
                        <thead>
                            <tr>
                                <th><i class="bi bi-hash me-2"></i>S.No</th>
                                <th><i class="bi bi-calendar-event me-2"></i>Start Date</th>
                                <th><i class="bi bi-calendar-check me-2"></i>End Date</th>
                                <th><i class="bi bi-card-text me-2"></i>Activity Name</th>
                                <th><i class="bi bi-geo-alt-fill me-2"></i>Venue</th>
                                <th><i class="bi bi-people-fill me-2"></i>No. of Participants</th>
                                <th><i class="bi bi-gear-fill me-2"></i>Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                //int i = 1;
                                int i = ((ViewBag.CurrentPage - 1) * ViewBag.PageSize) + 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.StartDate?.ToString("yyyy-MM-dd")</td>
                                    <td>@item.EndDate?.ToString("yyyy-MM-dd")</td>
                                    <td>@item.ActivityName</td>
                                    <td>@item.TrainingVenue</td>
                                    <td>@item.NoOfParticipants</td>
                                    <td class="text-end um-action">
                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-controller="HealthSystemActivity"
                                           asp-action="Edit"
                                           onclick="goToEdit('@item.ActivityId')"
                                           asp-route-id="@item.ActivityId"
                                           title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-controller="HealthSystemActivity"
                                              asp-action="Delete"
                                              asp-route-id="@item.ActivityId"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this activity?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            <nav>
    <ul class="pagination justify-content-end">

        <!-- Previous -->
        <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
            <a class="page-link"
               href="@(ViewBag.CurrentPage <= 1 ? "#" : Url.Action("Index", new {
                   page = ViewBag.CurrentPage - 1,
                   pageSize = ViewBag.PageSize,
                   StateId = ViewBag.StateId,
                   DistrictId = ViewBag.DistrictId,
                   ActivityNameId = ViewBag.ActivityNameId
               }))">
                Previous
            </a>
        </li>

        <!-- Page numbers -->
        @for (int p = 1; p <= ViewBag.TotalPages; p++)
        {
            <li class="page-item @(p == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new {
                       page = p,
                       pageSize = ViewBag.PageSize,
                       StateId = ViewBag.StateId,
                       DistrictId = ViewBag.DistrictId,
                       ActivityNameId = ViewBag.ActivityNameId
                   })">
                    @p
                </a>
            </li>
        }

        <!-- Next -->
        <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link"
               href="@(ViewBag.CurrentPage >= ViewBag.TotalPages ? "#" : Url.Action("Index", new {
                   page = ViewBag.CurrentPage + 1,
                   pageSize = ViewBag.PageSize,
                   StateId = ViewBag.StateId,
                   DistrictId = ViewBag.DistrictId,
                   ActivityNameId = ViewBag.ActivityNameId
               }))">
                Next
            </a>
        </li>

    </ul>
</nav>
        </div>
    </div>
</div>
<script>
    function goToEdit(ActivityId) {
        window.location.href = '/HealthSystemActivity/Edit/' + ActivityId;
    }


        function deleteUser(userId) {
        if (!confirm("Are you sure you want to delete this user?")) {
            return;
        }

        fetch('/User/Delete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken':
                    document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify(userId)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert("User deleted successfully");
                window.location.reload();
            } else {
                alert(data.message || "Delete failed");
            }
        })
        .catch(err => {
            console.error(err);
            alert("Error occurred while deleting user");
        });
    }

            async function searchActivity() {
        const term = document.getElementById("searchTerm").value;

        const response = await fetch(`/HealthSystemActivity/Search?q=${encodeURIComponent(term)}`);
        const html = await response.text();

        document.querySelector("#usersTable tbody").innerHTML = html;
    }

    document.getElementById("StateId").addEventListener("change", function () {
    let stateId = this.value;
    resetDropdown("DistrictId", "-- Select District --");
    if (!stateId) return;
    fetch(`/HealthSystemActivity/GetDistricts?stateId=${stateId}`)
           .then(res => res.json())
            .then(data => {
                  fillDropdown("DistrictId", data, "id", "name");
                 });
             });

    function resetDropdown(id, placeholder) {
         let ddl = document.getElementById(id);
          ddl.innerHTML = `<option value="">${placeholder}</option>`;
    }

    function fillDropdown(id, data, valueField, textField) {
         let ddl = document.getElementById(id);
         data.forEach(x => {
              let opt = document.createElement("option");
              opt.value = x[valueField];
              opt.text = x[textField];
              ddl.appendChild(opt);
         });
     }

    //=====================Search======================
         function searchData() {

            var stateId = document.getElementsByName("StateId")[0].value;
            var districtId = document.getElementsByName("DistrictId")[0].value;
            var activitytypeNameId = document.getElementsByName("ActivityNameId")[0].value;

            var url = '/HealthSystemActivity/Index?page=1&pageSize=10'
                + '&StateId=' + stateId
                + '&DistrictId=' + districtId
                + '&ActivityNameId=' + activitytypeNameId

            window.location.href = url;
        }

        //=========== Reload dropdown and preserve filters =================

document.addEventListener("DOMContentLoaded", async function () {

    var stateId = "@ViewBag.StateId";
    var districtId = "@ViewBag.DistrictId";
    var activityNameId = "@ViewBag.ActivityNameId";

    // Restore Activity Name dropdown
    if (activityNameId) {
        document.getElementById("ActivityNameId").value = activityNameId;
    }

    // Restore State dropdown
    if (stateId) {

        document.getElementById("StateId").value = stateId;

        // Load Districts based on state
        let districts = await fetch(`/HealthSystemActivity/GetDistricts?stateId=${stateId}`)
            .then(res => res.json());

        fillDropdown("DistrictId", districts, "id", "name");

        // Restore District selection AFTER filling dropdown
        if (districtId) {
            document.getElementById("DistrictId").value = districtId;
        }
    }

});

</script>
