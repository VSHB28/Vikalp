@using Vikalp.Models.DTO
@model IEnumerable<Vikalp.Models.DTO.HealthSystemActivityDto>
@{
    ViewData["Title"] = "Health Systems Activity Form";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .um-action {
        white-space: nowrap;
    }

    .um-card {
        border-radius: 0.5rem;
        box-shadow: 0 6px 18px rgba(12, 38, 63, 0.08);
    }

    .um-toolbar {
        gap: .5rem;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

    .um-search {
        max-width: 320px;
    }

    .um-table thead th {
        background: linear-gradient(90deg,#0d6efd, #6610f2);
        color: #fff;
        border: 0;
    }

    .um-table tbody tr:hover {
        background: rgba(13,110,253,0.03);
    }

    .um-action .btn {
        min-width: 44px;
    }

    .um-empty {
        padding: 2rem;
        text-align: center;
        color: #6c757d;
    }
</style>

<div class="container py-4">
    <div class="card um-card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h3 class="mb-0">Health System Activity</h3>
                </div>

                <div class="um-toolbar">
                    <div class="d-flex um-search">
                        <input id="searchTerm" class="form-control form-control-sm" placeholder="Search by activity name" />
                        <button type="button" class="btn btn-sm btn-outline-secondary ms-2" onclick="searchActivity()">Search</button>
                    </div>

                    <a href="@Url.Action("Create","HealthSystemActivity")" class="btn btn-sm btn-primary ms-3">
                        Add Activity
                    </a>
                </div>
            </div>

            @if (!Model?.Any() ?? true)
            {
                <div class="um-empty">
                    <p class="mb-1">No data found.</p>
                    <a a href="@Url.Action("Create", "HealthSystemActivity")" class="btn btn-outline-primary">Add your first activity</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table id="activitiesTable" class="table table-striped um-table align-middle">
                        <thead>
                            <tr>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Activity Name</th>
                                <th>Venue</th>
                                <th>Type</th>
                                <th>No. of Participants</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.StartDate?.ToString("yyyy-MM-dd")</td>
                                    <td>@item.EndDate?.ToString("yyyy-MM-dd")</td>
                                    <td>@item.ActivityName</td>
                                    <td>@item.TrainingVenue</td>
                                    <td>@item.ActivityTypeId</td>
                                    <td>@item.NoOfParticipants</td>
                                    <td class="text-end um-action">
                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-controller="HealthSystemActivity"
                                           asp-action="Edit"
                                           asp-route-id="@item.ActivityId"
                                           title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-controller="HealthSystemActivity"
                                              asp-action="Delete"
                                              asp-route-id="@item.ActivityId"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this activity?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function goToEdit(id) {
        window.location.href = '/User/Edit/' + id;
    }


        function deleteUser(userId) {
        if (!confirm("Are you sure you want to delete this user?")) {
            return;
        }

        fetch('/User/Delete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken':
                    document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: JSON.stringify(userId)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert("User deleted successfully");
                window.location.reload();
            } else {
                alert(data.message || "Delete failed");
            }
        })
        .catch(err => {
            console.error(err);
            alert("Error occurred while deleting user");
        });
    }

            async function searchActivity() {
        const term = document.getElementById("searchTerm").value;

        const response = await fetch(`/User/Search?q=${encodeURIComponent(term)}`);
        const html = await response.text();

        document.querySelector("#usersTable tbody").innerHTML = html;
    }

</script>
