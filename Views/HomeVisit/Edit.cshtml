@model Vikalp.Models.DTO.HomeVisitDTO

@{
    ViewData["Title"] = "Edit Home Visit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="mb-0">Edit Home Visit</h3>
                <a href="/HomeVisit/Index" class="btn btn-secondary">
                    ← Back to List
                </a>
            </div>

            <form method="post" class="row g-3">
                @Html.AntiForgeryToken()

                <input type="hidden" name="VisitId" value="@Model.VisitId" />

                <div class="col-md-3">
                    <label class="form-label">ASHA Id</label>
                    <input type="number"
                           name="ASHAId"
                           value="@Model.ASHAId"
                           class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">ASHA Name</label>
                    <input type="text"
                           name="ASHAName"
                           value="@Model.ASHAName"
                           class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Village</label>
                    <input type="text"
                           name="VillageName"
                           value="@Model.VillageName"
                           class="form-control" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Sub Center</label>
                    <select name="SubCenterId" class="form-select">
                        <option value="">Select Sub Center</option>
                        @foreach (var sc in ViewBag.SubCenters)
                        {
                            <option value="@sc.SubCentreId"
                                    @(sc.SubCentreId == Model.SubCenterId ? "selected" : "")>
                                @sc.SubCentre
                            </option>
                        }
                    </select>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        Update
                    </button>
                    <a href="/HomeVisit/Index" class="btn btn-secondary ms-2">
                        Cancel
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>
